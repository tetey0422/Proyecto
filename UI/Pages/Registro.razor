@page "/registro"

<style>
    body {
        background: url(/Fondos.jpg);
        overflow-x: hidden;
        width: 100%;
        background-size: cover;
        background-position: center;
        background-attachment: fixed;
        height: 100vh;
    }

    .fondo-transparente {
        background-color: rgba(255, 255, 255, 0.6);
        backdrop-filter: blur(10px);
    }
</style>

<div class="mb-3">
    <h1 class="display-2 fw-normal text-center">Registrarse</h1>
</div>
<form method="post" class="fondo-transparente p-3 text-primary-emphasis border border-primary-subtle rounded-3 col-8 mx-auto">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="mb-3">
        <label for="tipodoc" class="form-label">Tipo de documento de identidad</label>
        <select class="form-select" id="tipodoc" required>
            <option selected disabled value="">Selecciona uno</option>
            <option selected disabled value="">Selecciona uno</option>
            <option value="1">Cédula de Ciudadanía</option>
            <option value="2">Tarjeta de Identidad</option>
            <option value="2">Cedula de Extranjería</option>
            <option value="2">Registro Civil</option>
            <option value="2">Número de Identificación Personal</option>
            <option value="2">Número de Identificación Tributaria</option>
        </select>
    </div>
    <div class="mb-3">
        <label for="doc" class="form-label">Numero de documento</label>
        <input type="number" class="form-control" id="doc" placeholder="Ingrese el numero de documento" asp-for="Usuario.Documento" required>
        <span asp-validation-for="Usuario.Documento" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label for="name" class="form-label">Nombre</label>
        <input type="text" class="form-control" id="name" placeholder="Ingrese el nombre completo" asp-for="Usuario.Nombre" required>
    </div>
    <div class="mb-3">
        <label for="last" class="form-label">Apellidos</label>
        <input type="text" class="form-control" id="last" placeholder="Ingrese los apellidos completos" asp-for="Usuario.Apellido" required>
    </div>
    <div class="mb-3">
        <label for="sex" class="form-label">Sexo</label>
        <select class="form-select" id="sex" asp-for="Usuario.Sexo" required>
            <option selected disabled value="">Selecciona uno</option>
            <option value="1">Masculino</option>
            <option value="2">Femenino</option>
            <option value="3">Otro</option>
        </select>
    </div>
    <div class="mb-3">
        <label for="fechanacimiento" class="form-label">Fecha de Nacimiento</label>
        <input type="date" class="form-control" id="fechanacimiento" placeholder="Ingrese su fecha de nacimiento" asp-for="Usuario.FechaNacimiento" required>
    </div>    
    <div class="mb-3">
        <label for="cel" class="form-label">Celular</label>
        <input type="number" class="form-control" id="cel" placeholder="Ingrese su numero de celular" asp-for="Usuario.Telefono" required>
    </div>
    <div class="mb-3">
        <label for="email" class="form-label">Correo electronico</label>
        <input type="email" class="form-control" id="email" placeholder="Ingrese su correo electronico" asp-for="Usuario.Correo" required>
    </div>
    <div class="mb-3">
        <label for="direccion" class="form-label">Direccion</label>
        <input type="text" class="form-control" id="direccio" placeholder="Ingrese su direccion" asp-for="Usuario.Direccion" required>
    </div>
    <div class="mb-3">
        <label for="barrio" class="form-label">Barrio</label>
        <input type="text" class="form-control" id="barrio" placeholder="Ingrese su Barrio" asp-for="Usuario.Barrio" required>
    </div>
    <div class="mb-3">
        <label for="password" class="form-label">Contraseña</label>
        <input type="password" class="form-control" id="password" placeholder="Ingrese su contraseña" asp-for="Usuario.Contraseña" required>
    </div>
    <button type="submit" class="btn btn-primary d-grid col-4 mx-auto mb-3">Registrar</button>
    <div class="text-center">
        <NavLink class="link-offset-2 link-offset-3-hover link-underline link-underline-opacity-0 link-underline-opacity-75-hover" href="/agendar" role="button">
            Iniciar sesión
        </NavLink>
    </div>
</form>